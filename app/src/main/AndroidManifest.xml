        android:supportsRtl="true"
        android:theme="@style/Theme.EccomerceApp">
        <activity
            android:name="com.example.eccomerceapp.ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EccomerceApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.eccomerceapp.ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.product.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.cart.CartActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.cart.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.cart.OrderHistoryActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.catalog.CategoryListActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.catalog.ProductListActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.wallet.WalletActivity"
            android:exported="false" />
        <activity
            android:name="com.example.eccomerceapp.ui.profile.ProfileActivity"
            android:exported="false" />
    </application>

</manifest>