<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/productToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingEnd="8dp"
        android:titleTextColor="@color/primary_dark"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:title="@string/all_products_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productRecycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/productToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_product" />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/products_empty"
        android:textColor="@color/accent_gray"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/productRecycler"
        app:layout_constraintBottom_toBottomOf="@id/productRecycler"
        app:layout_constraintStart_toStartOf="@id/productRecycler"
        app:layout_constraintEnd_toEndOf="@id/productRecycler" />
</androidx.constraintlayout.widget.ConstraintLayout>

